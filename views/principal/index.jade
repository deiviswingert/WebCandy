extends layout

block content
  h1= title
  p Welcome to #{title}
  #wrapper
      #topbar
        #conis
          label
          span#quantidadeConis
          ul
            li#nome
            li
              a#trocarSenha
              //
                 redireciona para a sessão de informações gerais, focando em "sobre você" 
          a#sair
      #sidebar
        a.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        //
           <div id="logo"> <a href="/"><img src="img/logo.svg" alt="logo" /></a> </div> 
        nav#nav.navigation(role='navigation')
          ul
            li.active(data-section='1')
              i.icon-home
              span Home
            li(data-section='2')
              i.icon-money
              span Doces
            li(data-section='3')
              i.icon-pencil
              span Sugestões
            li.last(data-section='4')
              i.icon-envelope
              span Informções
        //
           /nav 
      //
         /sidebar 
      #container
        section#section1.section(data-section='1')
          #geral
            div
              h4#tituloArrecadado
              span#arrecadado
            button#retornar
            ul#ultimasCompras(data-bind='foreach: compras')
              li
                div
                  label Data Compra
                  span#dataCompra(data-bind='text: data, css : cssClass')
                  br
                  label Periodo
                  span#periodo(data-bind='text: periodo')
                  br
                  label Valor
                  span#valor(data-bind='text: valor')
            button#avancar
            label#melhores
            #graficoMaisPedidos
        //
           /section 
        section#section2.section(data-section='2')
          h4#nossosDoces
          ul#listaDoces
            li
              label.nomeDoce
              img.imgDoce(src='xuxu', alt='xuxu')
              label.valorDoce
              button(name='like')
              button(name='unLike')
        //
           /section 
        section#section3.section(data-section='3')
          h4#sugestoes
          textarea#txtSugestao
          button#salvarSugestao
          button#limparSugestao
        //
           /section 
        section#section4.section(data-section='4')
          h4#infoGeral
          label#informacoes
          h5#sobreVoce
          input#nome(type='text')
        //
           /section 
      //
         /container 
    //
       /wrapper 
    footer
      //
        JAVASCRIPTS 
      script(type='text/javascript', src='/javascripts/waypoints.min.js')
      script(type='text/javascript', src='/javascripts/jquery.knob.js')
      script(type='text/javascript', src='/javascripts/jquery.easing.1.3.js')
      script(type='text/javascript', src='/javascripts/bootstrap.min.js')
      script(type='text/javascript', src='/javascripts/main.js')
        